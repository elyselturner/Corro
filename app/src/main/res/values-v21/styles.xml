<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">#cddc39</item>
        <item name="android:colorPrimaryDark">#afb42b</item>
        <item name="android:colorAccent">#</item>
        <item name="android:textColorHighlight">#f0f4c3</item>
    </style>

    <style name="primaryText">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="buttonText">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#DEffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
    </style>

    <style name="thinDivider">
        <item name="android:height">1dp</item>
        <item name="android:background">#b6b6b6</item>
        <item name="android:textAppearance">?android:attr/divider</item>
    </style>
</resources>
